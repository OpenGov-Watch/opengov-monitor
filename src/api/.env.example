# =============================================================================
# API Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# NEVER commit .env files with real secrets to version control.
# =============================================================================

# Database paths for local development
DATABASE_PATH=../../data/local/polkadot.db
SESSIONS_DATABASE_PATH=../../data/local/sessions.db

# Session configuration
# Generate a secure random secret for production:
#   node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# The API will auto-generate and persist a secret if this is not set.
# SESSION_SECRET=your-secure-random-secret-at-least-32-characters

# Admin usernames (comma-separated)
# When set, only these users have admin access.
# When empty, all authenticated users have admin access (not recommended for production).
# ADMIN_USERNAMES=admin,superuser

# CORS configuration
# Comma-separated list of allowed origins for cross-origin requests.
# When not set, all origins are allowed (development mode).
# CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com

# Cross-origin authentication
# Set to "true" to enable cross-origin cookie authentication (requires HTTPS).
# This enables sameSite: "none" for cookies and CSRF protection.
# CROSS_ORIGIN_AUTH=false
