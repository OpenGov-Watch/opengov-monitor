{
  "name": "opengov-monitor",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:parallel": "concurrently -k -n api,frontend -c blue,green \"pnpm api:dev\" \"pnpm frontend:dev\"",
    "build": "pnpm -r run build",
    "test": "pnpm -r --parallel test:run",
    "api:dev": "pnpm --filter api run dev",
    "frontend:dev": "pnpm --filter opengov-monitor-frontend run dev",
    "migrate": "cd backend && python migrations/migration_runner.py --db ../data/polkadot.db",
    "migrate:create": "cd backend && python migrations/create_migration.py",
    "migrate:baseline": "cd backend && python migrations/baseline.py --db ../data/polkadot.db"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild", "bcrypt"]
  }
}
